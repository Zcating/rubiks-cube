{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "variable-name": [
      true,
      "check-format",
      "allow-leading-underscore"
    ],
    "interface-name": [
      false,
      "never-prefix"
    ],
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "indent": [
      true,
      "spaces",
      4
    ],
    "no-unused-variable": false,
    "no-console": false,
    "member-access": [
      false,
      "check-accessor"
    ]
  }
}
